  },
  "scripts": {
    "test": "jest --runInBand --testTimeout=20000 --detectOpenHandles",
    "sext": "jest  --silent --runInBand --detectOpenHandles",
    "dev": "nodemon server.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.js\""
  },
  "keywords": [],
